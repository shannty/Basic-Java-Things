import java.text.DecimalFormat;


public class MBAdult extends Adult {
	
	private final double PST = 0.08;
	
	public MBAdult(String the_brand, double the_price) {
		super(the_brand, the_price);
	}
	
	public double total() {			// determines total, with PST and GST
		double PST_price = super.total() + (PST * price);
		return PST_price;
	}
	
	public String toString() {				// prints out all of the important information as a string
		DecimalFormat fmt = new DecimalFormat("##.####");
		String output = "Type: adult clothing in MB\nBrand: " + brand + "\nPrice: " + price + "\nPrice with both taxes: " + fmt.format(total()) + "\n";
		return output;
	}

}
